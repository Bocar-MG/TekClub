@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Liste des Roles";
}
<h1 class="bg-black text-white">Liste des Roles</h1>

<table class="table table-striped table-hover table-bordered bg-white">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nom</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    @foreach (var role in Model)
    {
        <tbody>
            <tr>
                <th scope="row">@role.Id</th>
                <td>@role.Name</td>
                <td>
                    <a asp-action="UpdateRole" asp-route-id="@role.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@role.Id">Details</a> |
                    <a asp-action="DeleteRole" asp-route-id="@role.Id">Delete</a>
                </td>
            </tr>
        </tbody>
    }
</table>
