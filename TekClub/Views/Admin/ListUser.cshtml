@model IEnumerable<ApplicationUser>


    
        
    
    
  
        <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nom</th>
                <th scope="col">Prenom</th>
                <th scope="col">Email</th>
                <th scope="col">Age</th>
                <th scope="col">Classe</th>
                <th scope="col">Spécialité</th>
                <th scope="col">Telephone</th>
                <th scope="col">Status</th>
            <th scope="col">President</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
    @foreach (var user in Model)
    {
        <tbody>
            <tr>
                <th scope="row">@user.Id</th>
                <td>@user.Nom</td>
                <td>@user.Prenom</td>
                <td>@user.Email</td>
                <td>@user.Age</td>
                <td>@user.Classe</td>
                <td>@user.Specialité</td>
                <td>@user.PhoneNumber</td>
                <td>@if(user.Président)
                    {
                       <strong class="text-success">Demande Accépté</strong>
                       <i class="bi-check2-circle"></i>
                    }
                    else if(user.Status != null)
                    {
                        <strong class="text-danger">@user.Status</strong>
                        <i class="bi-x-circle"></i>

                         
                    }
                </td>
                <td>
                    @if (user.Président)
                    {
                        <p class="text-success">Président</p>
                    }
                    else
                    {
                        <p class="text-info">Membre</p>
                    }
                </td>
                 

                
                <td>

                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@user.Id"><i class="bi-pencil-square text-white"></i></a>
                    <a asp-action="Details" class="btn btn-secondary" asp-route-id="@user.Id"><i class="bi-eye-fill"></i></a>

                    <a asp-action="DeleteUser" class="btn btn-danger" asp-route-id="@user.Id"><i class="bi-trash3-fill text-white"></i></a>
                    
                    @if(user.Status != null)
                    {
                        <a asp-action="Accepter" asp-route-id="@user.Id">Accepter</a>
                    }
                 </td>
                 <td>
                    @if (user.Président)
                    {
                        <a asp-action="CreateClub" class="btn btn-success" asp-route-id="@user.Id"><i class="bi-heptagon text-white"></i></a>
                    }
                  

                </td>
            </tr>

           
        </tbody>
    
    
}
</table>
