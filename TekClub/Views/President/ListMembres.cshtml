@model IEnumerable<ApplicationUser>


<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nom</th>
            <th scope="col">Prenom</th>
            <th scope="col">Email</th>
            <th scope="col">Age</th>
            <th scope="col">Classe</th>
            <th scope="col">Spécialité</th>
            <th scope="col">Telephone</th>
            <th scope="col">Status</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    @foreach (var user in Model)
    {
        if (user.clubTemp != null && user.clubTemp.Equals(ViewBag.ClubId))
        {
            <tbody>
                <tr>
                    <th scope="row">@user.Id</th>
                    <td>@user.Nom</td>
                    <td>@user.Prenom</td>
                    <td>@user.Email</td>
                    <td>@user.Age</td>
                    <td>@user.Classe</td>
                    <td>@user.Specialité</td>
                    <td>@user.PhoneNumber</td>
                    <td >
                        @if (user.Status != null && user.Status.Equals("Accépté"))
                        {
                            <p class="text-success">@user.Status</p>
                        }
                        else
                        {
                            <p class="text-danger">@user.Status</p>
                        }
                    </td>



                    <td>

                      
                       

                        <a asp-action="Retirer" class="btn btn-danger" asp-route-id="@user.Id"><i class="bi-trash3-fill text-white"></i></a>

                        @if (user.Status != null && user.Club?.Id != null)
                        {
                            
                        }
                        else if(user.Status != null)
                        {
                            <a asp-action="Accepter" asp-route-id="@user.Id">Accepter</a>
                        }
                    </td>

                </tr>


            </tbody>
        }
        

    }
</table>
