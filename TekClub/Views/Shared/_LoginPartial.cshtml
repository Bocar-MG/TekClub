@using Microsoft.AspNetCore.Identity
@using TekClub.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User) && User.IsInRole("Manager"))
{
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="Index" style="background-color:#046380;border-left:dashed;"><i class="bi-house-gear"> </i>Dashboard</a>
        </li>
   
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="ListClub" style="background-color:#046380;border-left:dashed;"><i class="bi-heptagon"></i> Gestion Club</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="ListRole" style="background-color:#046380;border-left:dashed;"><i class="bi-r-circle"></i> Gestion Roles</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="ListUser" style="background-color:#046380; border-left:dashed;"><i class="bi-people"></i> Gestion Utilisateurs</a>
        </li>
        <li class="nav-item">
            <a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-white">Deconnexion</button>
            </form>
        </li>
       
}
else if(SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-white">Deconnexion</button>
            </form>
        </li>
    }
else
{
    <li class="nav-item">
        <a class="nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register">S'inscrire</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Se connecter</a>
    </li>
}
</ul>
