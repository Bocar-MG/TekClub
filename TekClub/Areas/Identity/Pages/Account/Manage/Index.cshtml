@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="text-white">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<form id="profile-form" method="post" enctype="multipart/form-data">
<div class="row">
    <div class="col-md-6">
       
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
              <br />
            <div class="form-floating">
                <input asp-for="Input.Prenom" class="form-control" />
                <label asp-for="Input.Prenom" class="form-label"></label>
                <span asp-validation-for="Input.Prenom" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating">
                <input asp-for="Input.Nom" class="form-control" />
                <label asp-for="Input.Nom" class="form-label"></label>
                <span asp-validation-for="Input.Nom" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating">
                <input asp-for="Input.Age" class="form-control" />
                <label asp-for="Input.Age" class="form-label"></label>
                <span asp-validation-for="Input.Age" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating">
                <input asp-for="Input.Classe" class="form-control" />
                <label asp-for="Input.Classe" class="form-label"></label>
                <span asp-validation-for="Input.Classe" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating">

                <select asp-for="Input.Specialité" class="form-control" autocomplete="specialité" aria-required="true" asp-items=@Model.Specialités></select>
                <label asp-for="Input.Specialité"></label>

                <span asp-validation-for="Input.Specialité" class="text-danger"></span>
</div>
            <br />
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating">
                <input type="file" asp-for="Input.ImagePic" class="form-control" id="profilePicture" />
                <label asp-for="Input.ImagePic" class="form-label"></label>
                <span asp-validation-for="Input.ImagePic" class="text-danger"></span>
            </div>
            <br />
           
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-dark">Save</button>
        </div>
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.ImagePic" style="width: 100%;"></label>
                    @if (Model.Input.ImagePic != null)
                    {
                        <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="@Url.Content("~/Profilepic/" +Model.Input.ImagePic)">
                    }
                    else
                    {
                        <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="">
                    }
                    </div>
                    </div>
       
   
</div>
</form>
<br />
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
